<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".elec.LcdActivity">

    <TextView
        android:id="@+id/tvLcdStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Écran LCD – en attente…"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLcdShowIp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remercier l'admin"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLcdStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLcdShowMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Envoyer une alerte"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLcdShowIp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
